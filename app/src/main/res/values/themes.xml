<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.UniBucIFR2025" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color used for buttons, etc. -->
        <item name="colorPrimary">@color/accent</item>
        <item name="colorOnPrimary">@color/primary</item>

        <!-- Surface and text styling -->
        <item name="colorSurface">@color/primary</item> <!-- Dialog background -->
        <item name="colorOnSurface">@color/text_secondary</item> <!-- Dialog text -->

        <!-- Optional: Used for selected item color, icon tint, etc. -->
        <item name="colorSecondary">@color/second_accent</item>
        <item name="colorOnSecondary">@color/primary</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/primary</item>

        <!-- Headings and body text -->
        <item name="colorSurfaceVariant">@color/secondary</item>
        <item name="colorOnSurfaceVariant">@color/text_primary</item>
    </style>

    <style name="Theme.UniBucIFR2025" parent="Base.Theme.UniBucIFR2025" />

    <style name="Theme.UniBucIFR2025.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/secondary</item>
        <item name="postSplashScreenTheme">@style/Theme.UniBucIFR2025</item>
    </style>
</resources>